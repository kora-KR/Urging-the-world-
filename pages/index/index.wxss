@import "./boot/boot.wxss";

/* css rest */
page {
  height: 100%;
  background: #f3f3f8;
}
view, text{
  line-height: 1
}
image{
  display: block;
}
.bg_fff{
  padding: 46rpx 40rpx 49rpx 40rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 0rpx 3rpx 10rpx 6rpx rgba(166, 180, 255, .2)
}
.header_img{
  width: 100%;
  height: 344rpx
}

/* main */
.main{
  position: relative;
  top: -120rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
}
/* 优势 */
.adv_item{
  display: flex
}
.adv_item:not(:nth-last-of-type(1)){
  margin-bottom: 32rpx
}
.adv_item image{
  float: left;
  margin: 8rpx 35rpx 0 0;
  width: 64rpx;
  height: 64rpx
}
.adv_item>view>view:nth-of-type(1){
  margin-bottom: 3rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  color: #222 
}
.adv_h2{
  margin-top: 4rpx;
  font-weight: 400
}
.adv_item>view>view:nth-of-type(2){
  font-size: 24rpx;
  line-height: 34rpx;
  color: #7A7A86
}

/* rec */
.rec{
  position: relative;
  margin: 20rpx 0;
  padding: 22rpx 30rpx 22rpx 140rpx;
  height: 112rpx;
  box-sizing: border-box;
  background: #fff;
}
.rec>image{
  position: absolute;
  left: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  display: block;
  width: 117rpx;
  height:112rpx;
}
.swiperRec{
  margin-top: -6rpx;
  font-size: 26rpx;
  color: #222;
  height: 80rpx;
}  
.recSwiper{
  display: flex;
  justify-content: space-between;
  align-items: center
} 
.recName{
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 502rpx
}
.time{
  margin-left: 120rpx
}
.rec>.head_line_icon{
  width: 10rpx;
  height: 20rpx;
  left: 680rpx
}

/* realtion */
.relation{
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 0;
  align-items: center;
  margin-bottom: 20rpx;
  height: 88rpx;
}
.button_rel::after{
  border: none
}
button{background-color: #fff;}
.relation>button{
  display: flex;
  justify-content: center;
  align-items: center;
  border: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #222
}
.relation image{
  margin-right: 10rpx; 
  width: 40rpx;
  height: 40rpx;
}
.relation>.relation_int{
  position: absolute;
  z-index: 999;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 1rpx;
  height: 48rpx;
  background: #e7e7f1
}

/* btn */
.other-button-hover {
  background-color: #eee;
}
.btn{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0rpx 4rpx 6rpx -2rpx rgba(134, 142, 255, .6);
  font-size: 34rpx;
  line-height: 96rpx;
}
.btn image{
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx
}