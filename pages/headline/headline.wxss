/* css rest */
page {
  height: 100%;
  background: #f3f3f8;
}
view, text{
  line-height: 1
}
image{
  display: block
}

/* header */
.swiper-tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  z-index: 999;
  width: 100%;  
  border-bottom: 1rpx solid #eeeef3;  
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
}  
.swiper-tab-list{ 
  font-size: 30rpx;  
  display: inline-block;  
  width: 160rpx;  
  color: #222;  
}  
.on{
  color: #5458ec;
  font-weight: 600
}
  
.swiper-box{display: block; width: 100%; overflow: hidden; padding-top: 100rpx; box-sizing: border-box}

.move{
  position: absolute;
  left: 0;
  top: 96rpx;
  width: 160rpx;
  height: 4rpx;
  background: #4558ec
}

.new_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  height: 208rpx;
  font-size: 32rpx;
  color: #222;
  font-weight: 600;
  border-bottom: 1rpx solid #eeeef3;
  background: #fff
}
.new_item>view:nth-of-type(1) {
  flex: 1
}
.new_item .img_all{
  position: relative;
  margin-left: 40rpx;
  width: 200rpx; 
  height: 148rpx ;
  overflow: hidden
}
.new_item image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width:226rpx; 
  height: 148rpx
}
.item_title{
  display: -webkit-box;
  line-height: 44rpx;
  min-width: 450rpx;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis
}
.item_data{
  margin-top: 14rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #999
}
.bg{
  position: absolute;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #9297a0;
  text-align: center
}
.bg>image{
  margin: 200rpx auto 48rpx;
  width: 318rpx;
  height: 234rpx;
}