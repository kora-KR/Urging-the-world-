page {
  height: 100%;
  color: #222;
  background: #f3f3f8;
}
view, text{
  line-height: 1
}
image{
  display: block
}

.header_img{
  width: 100%;
  height: 224rpx
}

.main{
  padding: 60rpx 64rpx;
  box-sizing: border-box;
  background: #fff
}

.title{
  margin-bottom: 38rpx;
  font-size: 36rpx;
  font-weight: 600; 
  text-align: center
}
.txt{
  line-height: 44rpx;
  font-size: 28rpx;
}
.txt:nth-of-type(2){
  margin-bottom: 42rpx;
}
.credient_img{
  margin: 42rpx auto 48rpx;
  width: 622rpx;
  height: 408rpx
}
.relation{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #4b69fc
}
.relation_icon{
  margin-right: 8rpx; 
  width: 38rpx;
  height: 38rpx
}

/* zzc */
/* zzc */
.zzc{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5)
}
.zzcTip{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 70%;
  line-height: 80rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #5458ec;
  font-weight: 600
}
.zzcTip>view{
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
}
.zzcTip image{
  display: inline-block;
  margin-right: 24rpx;
  width: 32rpx;
  height: 32rpx;
}
.allTip{
  line-height: 104rpx;
  font-size: 32rpx;
  color: #333;
}
.other{
  line-height: 80rpx;
}

.zz{
  margin: 54rpx auto 10rpx;
  height: 914rpx;
  color: #222;
  text-align: center
}
.zz_title{
  margin-bottom: 40rpx;
  font-size: 36rpx;
  font-weight: 600;
  text-align: center
}
.zz>view:not(:nth-of-type(1)){
  float: left;
  width: 296rpx;
  font-size: 26rpx
}
.zz>view:not(:nth-of-type(2n + 1)) {
  margin-right: 30rpx
}
.zz image{
  width: 296rpx;
  height: 190rpx
}
.zz_txt{
  margin: 20rpx 0 40rpx
}